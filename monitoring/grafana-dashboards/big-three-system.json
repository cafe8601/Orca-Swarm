{
  "dashboard": {
    "title": "Big Three Realtime Agents - System Overview",
    "tags": ["big-three", "agents", "realtime"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "5s",

    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "server_uptime_seconds",
            "refId": "A",
            "legendFormat": "Uptime (seconds)"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 60, "color": "yellow" },
                { "value": 300, "color": "green" }
              ]
            }
          }
        }
      },

      {
        "id": 2,
        "title": "Events Received",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "events_received_total",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "palette-classic" }
          }
        }
      },

      {
        "id": 3,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "websocket_connections_active",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },

      {
        "id": 4,
        "title": "HTTP Request Rate",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "refId": "A",
            "legendFormat": "Requests/sec"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2
          }
        }
      },

      {
        "id": 5,
        "title": "Events Over Time",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(events_received_total[1m])",
            "refId": "A",
            "legendFormat": "Events/sec"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "ops"
          }
        }
      },

      {
        "id": 6,
        "title": "WebSocket Connections Timeline",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "websocket_connections_active",
            "refId": "A",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "rate(websocket_connections_total[1m]) * 60",
            "refId": "B",
            "legendFormat": "New Connections/min"
          },
          {
            "expr": "rate(websocket_disconnections_total[1m]) * 60",
            "refId": "C",
            "legendFormat": "Disconnections/min"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },

      {
        "id": 7,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "rate(events_failed_total[1m])",
            "refId": "A",
            "legendFormat": "Failed Events/sec"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            },
            "color": { "mode": "fixed", "fixedColor": "red" },
            "unit": "ops"
          }
        }
      },

      {
        "id": 8,
        "title": "Requests by Path",
        "type": "table",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "http_requests_by_path_total",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{ "displayName": "Value", "desc": true }]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto",
              "align": "left"
            }
          }
        }
      }
    ],

    "templating": {
      "list": []
    },

    "time": {
      "from": "now-15m",
      "to": "now"
    },

    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    },

    "annotations": {
      "list": []
    }
  }
}
