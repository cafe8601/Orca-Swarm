# ============================================================================
# API Keys
# ============================================================================

# OpenAI API Key (REQUIRED for voice orchestration)
OPENAI_API_KEY=

# Anthropic API Key (OPTIONAL if using Claude Max)
# - Leave empty if you have Claude Max subscription
# - Or use placeholder: sk-ant-placeholder
ANTHROPIC_API_KEY=

# Google Gemini API Key (REQUIRED for browser automation)
GEMINI_API_KEY=

# Optional API Keys
GROQ_API_KEY=
DEEPSEEK_API_KEY=
ELEVENLABS_API_KEY=

# ============================================================================
# Claude Configuration (⭐ NEW - Claude Max Support)
# ============================================================================

# Claude operation mode:
# - "auto": Automatically choose (API if key exists, Max otherwise) [RECOMMENDED]
# - "max": Use Claude Max subscription via browser automation [NO API KEY NEEDED]
# - "api": Use Anthropic API (requires ANTHROPIC_API_KEY)
CLAUDE_MODE=auto

# Claude Max browser settings (only used in Max mode)
CLAUDE_MAX_HEADLESS=false          # Set "true" to hide browser window
CLAUDE_MAX_LOGIN_TIMEOUT=120       # Seconds to wait for login

# ============================================================================
# Claude Agent Configuration (⭐ NEW)
# ============================================================================

# Claude model selection
CLAUDE_AGENT_MODEL=claude-sonnet-4-5-20250929

# ============================================================================
# Observability Configuration (⭐ NEW)
# ============================================================================

# Observability server endpoint
OBSERVABILITY_SERVER_URL=http://localhost:4000/events

# Client dashboard URLs
VITE_WS_URL=ws://localhost:4000
VITE_API_URL=http://localhost:4000
VITE_MAX_EVENTS_TO_DISPLAY=100

# ============================================================================
# OpenAI Realtime Configuration (⭐ NEW)
# ============================================================================

# Realtime model selection
REALTIME_MODEL=gpt-realtime-2025-08-28

# Voice configuration
REALTIME_AGENT_VOICE=shimmer
REALTIME_ORCH_AGENT_NAME=ada

# Browser automation
BROWSER_TOOL_STARTING_URL=localhost:3333

# ============================================================================
# System Configuration
# ============================================================================

# Your name (used in prompts)
ENGINEER_NAME=Dan

# Agent working directory
AGENT_WORKING_DIRECTORY=apps/content-gen

# ============================================================================
# Advanced Systems (⭐ NEW)
# ============================================================================

# Enable/disable advanced features (default: all enabled)
ENABLE_AGENT_POOL=true             # 150+ specialized expert agents
ENABLE_WORKFLOW=true               # Multi-agent workflow orchestration
ENABLE_MEMORY=true                 # Session and context memory
ENABLE_LEARNING=true               # Pattern recognition and learning
ENABLE_SECURITY=true               # Audit logging and access control

# Agent pool configuration
MAX_INSTANCES_PER_EXPERT=3         # Max concurrent instances per expert type
AGENT_IDLE_TIMEOUT_MINUTES=30      # Minutes before idle agent cleanup

# ============================================================================
# Monitoring & Security (Docker Compose)
# ============================================================================

# Grafana admin password (IMPORTANT: Change from default!)
# Default: admin (INSECURE - change this!)
GRAFANA_ADMIN_PASSWORD=your_secure_password_here

# Observability Server CORS configuration
# Comma-separated list of allowed origins (e.g., "http://localhost:5173,https://app.example.com")
# Use "*" for development only (INSECURE in production!)
ALLOWED_ORIGINS=*

# ============================================================================
# Usage Examples
# ============================================================================

# Example 1: Use Claude Max (no API key needed!)
# CLAUDE_MODE=max
# ANTHROPIC_API_KEY=                # Empty
# → Uses Claude Max subscription via browser

# Example 2: Use Anthropic API (faster)
# CLAUDE_MODE=api
# ANTHROPIC_API_KEY=sk-ant-your-real-key
# → Uses Anthropic API

# Example 3: Auto-detect (recommended)
# CLAUDE_MODE=auto
# → Uses API if key exists, Max otherwise
